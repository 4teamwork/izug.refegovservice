<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="izug.refegovservice">

<body>
<div metal:fill-slot="main" class="webContent">
    <tal:main-macro metal:define-macro="main" tal:define="response view/get_body">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 class="documentFirstHeading">
            <span tal:condition="not:view/error"
                  tal:content="python: ' '.join(response['title'])" />
            <span tal:condition="view/error"
                  i18n:translate="">Error</span>
        </h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p tal:condition="view/error"
           i18n:translate="">
            No service found
        </p>
        <tal:error condition="not: view/error">
            <tal:row repeat="key view/blocks">
                <tal:block tal:condition="python: key in response and response[key]">
                    <h2 tal:content="key"></h2>
                    <p tal:content="structure python:'<br />'.join(response[key])">
                    </p>
                </tal:block>
            </tal:row>
            <!-- Kontakt -->
            <tal:contact condition="python: 'Adressen' in response">
                <h2>Adressen</h2>
                <p tal:content="structure python:'<br />'.join(response['Adressen'])">
                </p>
            </tal:contact>
        </tal:error>
    </tal:main-macro>
</div>
</body>
</html>